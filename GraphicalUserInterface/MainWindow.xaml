<Window x:Class="GraphicalUserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicalUserInterface"
        xmlns:viewModel="clr-namespace:Library.Logic.ViewModel;assembly=Library"
        xmlns:logic="clr-namespace:Library.Logic;assembly=Library"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:ClassPresenter/>
    </Window.DataContext>
    <Grid>
        <ContentControl x:Name="SelectedItemHelper" Content="{Binding ClassSelected, Mode=OneWayToSource}" Visibility="Collapsed"/>
        <TreeView SelectedItemChanged="TreeView_SelectedItemChanged" ItemsSource="{Binding ClassesList}" HorizontalAlignment="Left" Height="379" Margin="0,31,0,0" VerticalAlignment="Top" Width="387">

            <TreeView.ItemTemplate>

                <HierarchicalDataTemplate ItemsSource="{Binding OtherClassesReferences}">

                    <TextBlock Text="{Binding Path=Name}" />

                </HierarchicalDataTemplate>

            </TreeView.ItemTemplate>

        </TreeView>

        <TextBlock HorizontalAlignment="Left" Margin="436,33,0,0" TextWrapping="Wrap" Text="{Binding Path=ClassSelected.ObjectInfo}" VerticalAlignment="Top" Height="304" Width="259"/>

    </Grid>
</Window>
